@model Movie

<h1>Löschen</h1>

<form action="" method="post">
    <input type="text" asp-for="Title" class="form-control" readonly />
    <input type="date" asp-for="ReleaseDate" class="form-control" readonly />
    <input type="text" asp-for="Genre" readonly />
    <input type="number" step="0.01" asp-for="Price" readonly />

    <button type="submit" class="btn btn-danger">Send to the Gulag</button>
</form>